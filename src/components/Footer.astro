    color: var(--color-gray);
    margin: 0;
  }

  .footer-credits {
    flex: 1;
    text-align: left;
  }

  .footer-text {
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--spacing-md) 0;
