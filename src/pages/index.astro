---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import OwnProjects from '../components/OwnProjects.astro';
import Blog from '../components/Blog.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const title = 'Pascal Albisser - Datenjournalist & Full-Stack Data Developer';
const description = 'Pascal Albisser ist Datenjournalist (SRF Data) und Full-Stack Data Developer. Portfolio mit interaktiven Datengeschichten und eigenen Projekten.';
---

<BaseLayout title={title} description={description}>
  <main>
    <Hero />
    <Projects />
    <OwnProjects />
    <Blog />
    <Contact />
  </main>
  <Footer />
</BaseLayout>
